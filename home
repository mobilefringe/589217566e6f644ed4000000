<script>
    $(document).ready(function(){
        init();
        scroll();
        $('#signup_form').submit(function(e){
            $('.send_btn').prop('disabled', true);
            e.preventDefault();
            var post_data = {}
            post_data.mailto = "ardalan@mobilefringe.com";
            post_data.subject = "RM Sign up (U.S)";
            custom = {};
            custom.name = $('#full_name').val();
            custom.email = $('#email').val()
            custom.phone = $('#phone').val();
            custom.retailer = $('#retailer').val();
            custom.position = $('#position').val();
            post_data.custom = custom;
            $.post("http://home.mallmaverick.com/custom_email", post_data, function(data, status, xhr){
                if(status == "success"){
                        var dialog = bootbox.dialog({
                            title: 'Thank you for contacting Retail Maverick',
                            message: 'We have received your information. A Retail Maverick representative will be in touch with you in the next 2 to 3 business days.'
                        }); 
                    $('#signup_form').trigger('reset');
                    $('.send_btn').prop('disabled', false);
                }
                else{
                    alert("Unable to process your request. Please try again later.");
                }
            });
            $.getJSON(
                this.action + "?callback=?",
                $(this).serialize()
            );
        });
    });
    
</script>








